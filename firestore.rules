rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Employees collection - allow public read/write
    match /employees/{empId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Attendance collection and ALL subcollections (event/records/...)
    match /attendance/{document=**} {
      allow read: if true;
      allow write: if true;
    }
  }
}
